<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="com.AFFILIATE.www" id="io.cordova.hellocordova" version="0.8.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SIAM Affiliate</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="www/assets/images/SplashScreen.png" density="port-mdpi"/>
        <icon src="www/assets/images/SiamAppLogo.png" platform="ios" width="57" height="57" density="mdpi" />
        <!-- <splash density="port-mdpi" src="www/assets/images/SplashScreen.png" />
        <icon density="mdpi" height="57" platform="ios" src="www/assets/images/SiamAppLogo.png" width="57" /> -->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
